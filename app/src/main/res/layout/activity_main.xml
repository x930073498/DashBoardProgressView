<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"

    tools:context=".MainActivity">


    <com.x930073498.dashboardview.DashBoardProgressView
        android:id="@+id/progressView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:baseColor="@color/lightgrey"
        app:baseLineWidth="2dp"
        app:baseLongLength="42dp"
        app:baseShortLength="28dp"
        app:dashColor="@color/white"
        app:dashLineWidth="2dp"
        app:dashLongLength="10dp"
        app:dashMargin="10dp"
        app:dashShortLength="5dp"
        app:description="信用极好"
        app:descriptionColor="@color/white"
        app:descriptionTextSize="14sp"
        app:endAngle="60"
        app:max="100"
        app:progress="40"
        app:progressColor="@color/white"
        app:progressLineWidth="2.5dp"
        app:progressLongLength="42dp"
        app:progressShortLength="28dp"
        app:progressText="40"
        app:countDash="40"
        app:countProgress="30"
        app:progressTextColor="@color/white"
        app:progressTextSize="40sp"
        app:startAngle="-240"
        app:backgroundColor="@color/deeppink"
        app:textMargin="2dp" />

</LinearLayout>